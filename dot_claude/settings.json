{
  "model": "opus",
  "preferredNotifChannel": "terminal_bell",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(rg:*)",
      "Bash(xargs grep:*)",
      "Bash(xargs wc:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm check:*)",
      "Bash(pnpm run check:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm fmt:*)",
      "Bash(pnpm format:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(biome:*)",
      "Bash(deno test:*)",
      "Bash(go doc:*)",
      "Bash(go test:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(git --no-pager diff:*)",
      "Bash(git --no-pager log:*)",
      "Bash(git merge-base:*)",
      "Read(~/ghq/**)",
      "Edit(./**)",
      "MultiEdit(./**)",
      "WebFetch(domain:*)",
      "WebSearch(*)",
      "Write(./**)",
      "MultiEdit(./**)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)",
      "Bash(git push:*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  }
}
