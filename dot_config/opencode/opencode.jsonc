{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      "mkdir *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sort *": "allow",
      "rg *": "allow",
      "wc *": "allow",
      "uniq *": "allow",
      "cut *": "allow",
      "tr *": "allow",
      "awk *": "allow",
      "sed *": "allow",
      "jq *": "allow",
      "file *": "allow",
      "which *": "allow",
      "basename *": "allow",
      "dirname *": "allow",
      "realpath *": "allow",
      "pwd": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "git branch *": "allow",
      "git rev-parse *": "allow",
      "git remote *": "allow",
      "git tag *": "allow",
      "git blame *": "allow",
      "git stash list *": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "trash *": "allow",
      "echo *": "allow",
      "touch *": "allow",
      "diff *": "allow",
      "rm *": "deny",
      "sudo *": "deny",
      "npx *": "deny",
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
    },
    "external_directory": {
      "~/ghq/**": "allow",
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
    },
  },
}
