{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      "mkdir *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sort *": "allow",
      "rg *": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "trash *": "allow",
      "echo *": "allow",
      "touch *": "allow",
      "diff *": "allow",
      "rm *": "deny",
      "sudo *": "deny",
      "npx *": "deny",
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
    },
    "external_directory": {
      "~/ghq/**": "allow",
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
    "gh-grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
    },
  },
}
