{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      "rm*": "deny",
      "sudo*": "deny",
      "npx*": "deny",
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
}
