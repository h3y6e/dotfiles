{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "share": "disabled",
  "autoupdate": false,
  "permission": {
    "bash": {
      "*": "ask",
      "mkdir *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "find *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "sort *": "allow",
      "rg *": "allow",
      "jq *": "allow",
      "test *": "allow",
      "mv *": "allow",
      "trash *": "allow",
      "file *": "allow",
      "sed *": "allow",
      "touch *": "allow",
      "diff *": "allow",
      "cp *": "allow",
      "xargs grep *": "allow",
      "xargs wc *": "allow",
      "pnpm install *": "allow",
      "pnpm check *": "allow",
      "pnpm lint *": "allow",
      "pnpm fmt *": "allow",
      "pnpm format *": "allow",
      "pnpm type-check *": "allow",
      "pnpm typecheck *": "allow",
      "pnpm test run *": "allow",
      "pnpm build *": "allow",
      "pnpm run type-check *": "allow",
      "pnpm run check *": "allow",
      "pnpm run lint *": "allow",
      "biome *": "allow",
      "deno test *": "allow",
      "go doc *": "allow",
      "go test *": "allow",
      "gh pr list *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr checks *": "allow",
      "gh run view *": "allow",
      "gh issue view *": "allow",
      "git diff *": "allow",
      "git --no-pager diff *": "allow",
      "git log *": "allow",
      "git --no-pager log *": "allow",
      "git ls-tree *": "allow",
      "git show *": "allow",
      "rm *": "deny",
      "sudo *": "deny",
      "npx *": "deny",
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "mcp": {
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
    },
  },
}
