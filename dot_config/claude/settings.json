{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1",
    "ENABLE_BACKGROUND_TASKS": "1",
    "DISABLE_MICROCOMPACT": "1",
    "DISABLE_INTERLEAVED_THINKING": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "ENABLE_TOOL_SEARCH": "1"
  },
  "attribution": {
    "commit": "Co-authored-by: Claude <noreply@anthropic.com>"
  },
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(test:*)",
      "Bash(mv:*)",
      "Bash(trash:*)",
      "Bash(file:*)",
      "Bash(sed:*)",
      "Bash(touch:*)",
      "Bash(diff:*)",
      "Bash(cp:*)",
      "Bash(xargs grep:*)",
      "Bash(xargs wc:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm check:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm fmt:*)",
      "Bash(pnpm format:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(pnpm test run:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm run check:*)",
      "Bash(pnpm run lint:*)",
      "Bash(biome:*)",
      "Bash(deno test:*)",
      "Bash(go doc:*)",
      "Bash(go test:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(gh issue view:*)",
      "Bash(git diff:*)",
      "Bash(git --no-pager diff:*)",
      "Bash(git --no-pager log:*)",
      "Bash(git merge-base:*)",
      "Bash(git ls-tree:*)",
      "Bash(git show:*)",
      "Read(~/ghq/**)",
      "Edit(./**)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:github.blog)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:docs.expo.dev)",
      "WebFetch(domain:scrapbox.io)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:pnpm.io)",
      "WebFetch(domain:dev.to)",
      "WebFetch(domain:turborepo.com)",
      "WebFetch(domain:linear.app)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:panda-css.com)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:turbo.build)",
      "WebFetch(domain:nx.dev)",
      "WebFetch(domain:stylexjs.com)",
      "WebFetch(domain:cloud.google.com)",
      "WebFetch(domain:www.microsoft.com)",
      "WebFetch(domain:arxiv.org)",
      "WebFetch(domain:help.figma.com)",
      "WebFetch(domain:mise.jdx.dev)",
      "WebFetch(domain:www.w3.org)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:react-spectrum.adobe.com)",
      "WebFetch(domain:css-tricks.com)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:www.chromatic.com)",
      "WebSearch",
      "Write(./**)",
      "mcp__figma__get_image",
      "mcp__figma__get_code",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": ["NotebookEdit", "Bash(rm:*)", "Bash(sudo:*)", "Bash(npx:*)"],
    "defaultMode": "acceptEdits"
  },
  "model": "opusplan",
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "figma@claude-plugins-official": true
  }
}
