{
  "model": "opus",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(sort:*)",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(test:*)",
      "Bash(mv:*)",
      "Bash(file:*)",
      "Bash(xargs grep:*)",
      "Bash(xargs wc:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm check:*)",
      "Bash(pnpm run check:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm fmt:*)",
      "Bash(pnpm format:*)",
      "Bash(pnpm type-check:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm typecheck:*)",
      "Bash(biome:*)",
      "Bash(deno test:*)",
      "Bash(go doc:*)",
      "Bash(go test:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(git --no-pager diff:*)",
      "Bash(git --no-pager log:*)",
      "Bash(git merge-base:*)",
      "Bash(git add:*)",
      "Read(~/ghq/**)",
      "Edit(./**)",
      "MultiEdit(./**)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:nextjs.org)",
      "WebFetch(domain:docs.expo.dev)",
      "WebFetch(domain:scrapbox.io)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:*.npmjs.com)",
      "WebFetch(domain:pnpm.io)",
      "WebFetch(domain:dev.to)",
      "WebFetch(domain:turborepo.com)",
      "WebSearch(*)",
      "Write(./**)",
      "mcp__*"
    ],
    "deny": ["Bash(rm:*)", "Bash(sudo:*)"]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r0 '[.message//\"\", .title//\"Claude Code\"] | map(gsub(\"\\\\u0000\"; \"\"))[]' | xargs -0 osascript -e 'on run a' -e 'display notification item 1 of a with title item 2 of a sound name \"Morse\"' -e 'end run'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.transcript_path//empty' | xargs -I{} sh -c '[ -f \"{}\" ] && tail -1 \"{}\" | jq -r \"(.message.content[0].text//\\\"Done\\\")\" | xargs osascript -e \"display notification \\\"{}\\\" with title \\\"Claude Code\\\" sound name \\\"Frog\\\"\"'"
          }
        ]
      }
    ]
  }
}
