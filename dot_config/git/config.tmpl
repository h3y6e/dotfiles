[core]
	editor = vim -c \"set fenc=utf-8\"
	ignorecase = false
	autocrlf = false
	eol = lf
	symlinks = true
	quotepath = false
	safecrlf = true
[pager]
	diff = false
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	aliases = config --get-regexp alias
	tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
	push-f = push --force-with-lease
	pull-f = !git fetch && git reset --hard @{u}
	cd = !git switch $(git config --get init.defaultBranch)
	cleanup = !git fetch --prune && git for-each-ref --format=\"%(refname:short) %(upstream:track)\" refs/heads | grep \"\\\\[gone\\\\]\" | cut -d\" \" -f1 | xargs -r git branch -D
[merge]
	ff = false
	conflictStyle = zdiff3
[pull]
	ff = only
	rebase = true
[push]
	default = current
	autoSetupRemote = true
[rebase]
	autostash = true
	abbreviateCommands = true
	autoSquash = true
[fetch]
	prune = true
	fsckObjects = true
[diff]
	algorithm = histogram
[diff "lockb"]
	textconv = bun
	binary = true
{{- if eq .chezmoi.os "darwin" }}
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
	gpgsign = true
	verbose = true
{{- end }}
[url "https://github.com/"]
	insteadOf = git@github.com:
[submodule]
	recurse = true
[rerere]
	enabled = true
[branch]
	sort = -committerdate
[help]
	autocorrect = prompt
[transfer]
	fsckObjects = true
[wt]
	basedir = ../{gitroot}.work
	copyuntracked = true
	copy = "*.local.*"
	copy = "*.local"
	hook = "git submodule update --init --recursive"
