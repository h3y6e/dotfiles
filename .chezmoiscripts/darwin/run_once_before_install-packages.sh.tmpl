#!/bin/bash

set -Eeufo pipefail

{{ $brews := list
  "asdf"
  "bat"
  "gh"
  "ghq"
  "git"
  "jq"
  "peco"
  "pinentry-mac" -}}

{{ $casks := list
  "1password"
  "cron"
  "deepl"
  "docker"
  "dropbox"
  "firefox-developer-edition"
  "iterm2"
  "karabiner-elements"
  "mos"
  "notion"
  "raycast"
  "slack"
  "visual-studio-code"
  "wezterm" -}}

{{ $casks = concat $casks (list
  "font-fira-code"
  "font-sauce-code-pro-nerd-font"
  "font-udev-gothic-nf") -}}

{{ if eq .chezmoi.username "h3y6e" -}}
# personal
{{ $casks = concat $casks (list
  "affinity-designer"
  "affinity-photo"
  "affinity-publisher"
  "amazon-photos"
  "google-chrome-dev"
  "readdle-spark") -}}
{{ end -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
tap "homebrew/cask-fonts"
tap "homebrew/cask-versions"
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
